<link rel="stylesheet" href="<%=assetPath('css/requests.css')%>" />

<div id="requests-container">
    <%if(locals.comingRequests!=null && locals.sendRequests!=null){%>
        <div style="
      display: flex;
      flex-direction: column;
      width: 100%;
      box-sizing: border-box;
    ">
            <!-- header -->

            <div class="request-header" style="width: inherit">
                <div id="send-header" type="send" class="header" onClick="toggleHead('send-header')">
                    Requested
                </div>
                <div id="coming-header" type="coming" class="header" onClick="toggleHead('coming-header')">
                    Coming Req
                </div>
            </div>

            <!-- sending-request-div -->

            <div class="send all" style="display: flex; flex-direction: column; width: inherit">
                <%if(locals.sendRequests.length==0){%>
                    <div style="color: red; text-align: center; padding: 15px; width: inherit">
                        No send request found
                    </div>
                    <%}%>
                        <%for(let u of locals.sendRequests){%>
                            <div style="
          width: 100%;
          display: flex;
          flex-direction: row !important;
          justify-content: space-between !important;
          align-items: space-between !important;
        ">
                                <div>
                                    <a href="/user/profile?user_id=<%=u.id%>" style="text-decoration: none; color: black">
                                        <div class="add-on-hover">
                                            <div>
                                                <img src="<%=u.pic%>" alt="pic" height="50px" width="50px" style="border-radius: 50%" />
                                            </div>
                                            <div style="display: flex; flex-direction: column">
                                                <span><%=u.name%></span>
                                                <span style="font-size: 13"><%=u.onModel%></span>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <div>
                                    <a class="request-link" href="/user/withdraw-request?target=<%=u.id%>"><button>Withdraw</button></a
          >
        </div>
      </div>
      <%}%>
    </div>
    <!-- coming requests -->

    <div class="coming all" style="display: flex; flex-direction: column">
      <%if(locals.comingRequests.length==0){%>
      <div style="color: red; text-align: center; padding: 15px">
        No Coming request found
      </div>
      <%}%> <%for(let u of locals.comingRequests){%>
      <div
        style="
          width: 100%;
          display: flex;
          flex-direction: row !important;
          justify-content: space-between !important;
          align-items: space-between !important;
        "
      >
        <div style="width: fit-content">
          <a
            href="/user/profile?user_id=<%=u.id%>"
            style="text-decoration: none; color: black"
          >
            <div class="add-on-hover">
              <div>
                <img
                  src="<%=u.pic%>"
                  alt="pic"
                  height="50px"
                  width="50px"
                  style="border-radius: 50%"
                />
              </div>
              <div style="display: flex; flex-direction: column">
                <span><%=u.name%></span>
                <span style="font-size: 13"><%=u.onModel%></span>
              </div>
            </div>
          </a>
                                </div>
                                <div style="width: fit-content">
                                    <a class="request-link" href="/user/accept-request?target=<%=u.id%>"><button>Accept</button></a
          >
          <a href="/user/ignore-request?target=<%=u.id%>" class="request-link"
            ><button>Ignore</button></a
          >
        </div>
      </div>
      <%}%>
    </div>
  </div>
  <%}%>
  <div style="width: 100%">
    <div class="request-header" style="width: 100%; box-sizing: border-box">
      <div style="width: 100%" id="member-header">Membership</div>
    </div>
    <div
      style="
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
      "
    >
      <%if(locals.members.length==0){%>
      <div style="color: red; text-align: center; padding: 15px">
        No Member found
      </div>
      <%}%> <%for(let u of locals.members){%>
      <div
        style="
          width: 100%;
          display: flex;
          flex-direction: row !important;
          justify-content: space-between !important;
          align-items: space-between !important;
        "
      >
        <div>
          <a
            href="/user/profile?user_id=<%=u.id%>"
            style="text-decoration: none; color: black"
          >
            <div class="add-on-hover">
              <div>
                <img
                  src="<%=u.pic%>"
                  alt="pic"
                  height="50px"
                  width="50px"
                  style="border-radius: 50%"
                />
              </div>
              <div style="display: flex; flex-direction: column">
                <span><%=u.name%></span>
                <span style="font-size: 13"><%=u.onModel%></span>
              </div>
            </div>
          </a>
                                </div>
                                <%if(locals.comingRequests!=null && locals.sendRequests!=null){%>
                                    <div>
                                        <a class="request-link" href="/user/remove-membership?target=<%=u.id%>"><button>Remove</button></a
          >
        </div>
        <%}%>
      </div>
      <%}%>
    </div>
  </div>
</div>

<script src="<%=assetPath('js/requests.js')%>"></script>

