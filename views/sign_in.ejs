                <div class="little-finger"></div>
                <div class="little-finger"></div>
                <div class="little-finger"></div>
            </div>
            <div class="big-finger"></div>
        </div>
        <!-- </div> -->
        <div id="slide-container">
            <div id="login-form">
                <form action="/create-session" method="POST">
                    <br />
                    <br />
                    <input type="text" name="email" oninput="handleInputChange(event)" onfocus="handleInputChange(event)" placeholder="Type Email .." />
                    <br />
                    <br />
                    <input type="password" name="password" id="" placeholder="password" onfocus="slideup(event)" onfocusout="slidedown(event)" />
                    <br />
                    <br />
                    <input type="radio" name="tick" value="Student" checked />
                    <span>Student</span>
                    <input type="radio" name="tick" value="Staff" />
                    <span>Staff</span>
                    <input type="radio" name="tick" value="Club" />
                    <span>Club</span>
                    <br />
                    <br />
                    <button style="margin-left: 45px">Sign-in</button>
                    <!-- <input type="submit" value="Sign-In" style="margin-left: 45px" /> -->
                </form>
            </div>
            <!-- <div id="hand-container"> -->
            <div class="hand" id="left-hand">
                <div class="finger"></div>
                <div class="finger"></div>
                <div class="finger"></div>
            </div>
            <div class="hand" id="right-hand">
                <div class="finger"></div>
                <div class="finger"></div>
                <div class="finger"></div>
            </div>
            <!-- </div> -->
        </div>
    </div>

