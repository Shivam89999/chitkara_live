    <div id="container">
        <div id="ear-container">
            <div class="ear" id="left-ear"></div>

            <div class="ear" id="right-year"></div>
        </div>

        <div id="face">
            <div id="eye-container">
                <div class="eye" id="left-eye">
                    <div class="eye-white">
                        <div class="eye-manik"></div>
                    </div>
                </div>
                <div class="eye" id="right-eye">
                    <div class="eye-white">
                        <div class="eye-manik"></div>
                    </div>
                </div>
            </div>
            <div id="mouth"></div>
        </div>
        <div id="stomach"></div>
        <!-- <div id="feet-container"> -->
