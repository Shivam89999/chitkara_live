<link rel="stylesheet" href="/css/new_post.css" />
<div id="new-post">
    <div id="img-container">
        <img src="<%=locals.user.pic%>" alt="" height="65px" width="65px" style="border-radius: 50%" />
    </div>
    <h3>New Text Post</h3>
    <div>
        <form action="/creator/new-text-post" method="POST">
            <textarea maxlength="10000" name="content" id="" required cols="30" rows="10" placeholder="Start Writing here" style="border: 1px solid rgb(224, 214, 214); padding: 5px"></textarea>
            <input type="text" name="caption" placeholder="Type Caption here" style="border: 1px solid whitesmoke" />
            <button>Post</button>
        </form>
    </div>
</div>