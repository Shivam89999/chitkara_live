</head>

<body>
    <!-- <h1>
        <%=locals.title%>
    </h1> -->

    <%-body-%>
        <div id="notifications" style="top: 10px; z-index: 9999999 !important"></div>
        <!-- <%-include('../partials/_footer');-%> -->
        <%- script %>
            <script>
                <%if(flash.success&&flash.success.length>0){%>
                new Noty({
                    theme: 'relax',
                    text: "<%=flash.success%>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500,
                }).show();
                <%}%>
                <%if(flash.error&&flash.error.length>0){%>
                new Noty({
                    theme: 'relax',
                    text: "<%=flash.error%>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500,
                }).show();
                <%}%>
            </script>
            <script src="<%=assetPath('js/ajax_request.js')%>"></script>
</body>

</html>