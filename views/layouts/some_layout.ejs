<html>

<head>
    <title>
        <%=locals.title%>
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <%- style %>
        <link rel="stylesheet" href="<%=assetPath('css/notifications.css')%>" />
</head>

<body>
    <!-- <h1>
        <%=locals.title%>
    </h1> -->
    <div id="notifications" style="top: 10px"></div>
    <%-body-%>
        <!-- <%-include('../partials/_footer');-%> -->
        <%- script %>
            <script>
                <%if(flash.success&&flash.success.length>0){%>
                new Noty({
                    theme: 'relax',
                    text: "<%=flash.success%>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500,
                }).show();
                <%}%>
                <%if(flash.error&&flash.error.length>0){%>
                new Noty({
                    theme: 'relax',
                    text: "<%=flash.error%>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500,
                }).show();
                <%}%>
            </script>
            <script src="<%=assetPath('js/ajax_request.js')%>"></script>
</body>

</html>