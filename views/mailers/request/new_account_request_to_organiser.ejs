<% var url='http://localhost:8000';%>
    <div style="
    background-color: rgba(34, 33, 33, 0.842) !important;
    color: white !important;
    font-size: 15px;
    padding: 10px;
  ">
        <%-include('../mail_header');-%>
            <h4 style="text-align: center; color: cyan">
                New
                <%=obj.data.type%> Account Request Recieved
            </h4>
            <div>
                <span>Hi <%=obj.name%>,</span>
                <div style="padding-top: 5px; text-align: center; color: chartreuse">
                    <a href="<%=url%>/user/profile?user_id=<%=obj.sender._id%>">
                        <%=obj.sender.name%> (
                            <%=obj.sender.onModel%>)</a>
